<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="alertDialogTheme">@style/AppTheme.Dialog.Alert</item>
        <item name="dialogTheme">@style/AppTheme.Dialog</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/background</item>
        <item name="android:colorBackground">@color/colorPrimary</item>
        <item name="android:windowBackground">@drawable/accent_dialog_radius</item>
        <item name="android:textColor">@color/button_light_text</item>

        <!--<item name="buttonStyle">@style/BitPowderButton.Light</item>-->
        <item name="editTextBackground">@drawable/abc_edit_text_material</item>
        <item name="dialogPreferredPadding">@dimen/content_start_outside</item>
    </style>

    <style name="AppTheme.Dialog.Alert">
        <item name="windowMinWidthMajor">@dimen/abc_dialog_min_width_major</item>
        <item name="windowMinWidthMinor">@dimen/abc_dialog_min_width_minor</item>
    </style>
</resources>
